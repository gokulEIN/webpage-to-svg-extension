{
  "manifest_version": 3,
  "name": "SVG Exporter",
  "version": "1.0",
  "description": "Export part of a webpage as SVG",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Export to SVG"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html-to-image.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"]
}
